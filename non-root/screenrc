# don't display the copyright page
startup_message off

# increase scrollback buffer size
defscrollback 10000

bind j focus down
bind k focus up
bind l focus right
bind h focus left

split
# create windows
screen -t container /bin/bash container.sh
screen -t host watch -n1 ps -C nginx -o user,uid,cmd

focus down
select 1
resize -v -10
focus up
select 0

caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %LD %d %LM - %c"
